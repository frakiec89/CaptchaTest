<Window x:Class="CaptchaTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaptchaTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="800">
    <Grid>
        <StackPanel>
            
            <TextBox x:Name="tbLog"   Margin="5"></TextBox>
            
            <Label Margin="5">Ввели логин</Label>

            <TextBox x:Name="tbpass"  Margin="5"></TextBox>
            
            <Label Margin="5">Ввели пароль</Label>

            <TextBox
                Name="tbCapcha"
                Margin="5"></TextBox>
            <Label Margin="5">Ввели Капчу</Label>

            <Image Margin="10" Name="imageCapch"  Height="200" Width="400" 
                   HorizontalAlignment="Left"
                   />
            
            <Button Margin="10" x:Name="refreshButonn" Click="refreshButonn_Click" > обновить капчу</Button>

            <Button Margin="10"  x:Name="GoButonn"  Click="GoButonn_Click">Вход</Button>


        </StackPanel>
    </Grid>
</Window>
